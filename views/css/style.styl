body
	font 100%/1.5 "Helvetica Neue", Arial, Helvetica, sans-serif
	background darken(white, 10%)

a
	color: #000;
	text-decoration none

	&:hover
		text-decoration underline

#container
	width 600px
	margin 1em auto

header
	margin-bottom 1em
	
	h1
		float left

h1, h2, h3
	margin 0

h2, h3
	margin-bottom .5em

nav
	float right

nav a
	display inline
	margin-left 20px

p
	margin 0
	margin-bottom 1em
p:last-child
	margin-bottom 0

#content
	background white
	border 1px solid #ccc
	padding 20px

	border-radius 5px
	box-shadow 0 1px 5px rgba(0,0,0, .2)
	clear both

#chart
	width 100%
	height 400px
	margin-top 20px

.clear
	clear both

input
	display block
	padding 10px
	margin-bottom 10px
	width 100%

	box-sizing border-box

input[type="text"], input[type="email"], input[type="password"]
	border 1px solid #ccc
	border-radius 3px
	box-shadow inset 0 1px 2px rgba(0,0,0, .2)
	font-size 1.5em

input[type="submit"]
	border 0

.btn, input[type="submit"]
	-webkit-appearance none

	display inline-block
	padding 10px
	border-radius 10px

	font-size 1em

	background blue
	color white
	vertGradient(blue, darken(blue, 15%))

	text-shadow 0 1px 2px rgba(0,0,0, .2)

	text-decoration none
	
	&:hover
		cursor pointer
		background darken(blue, 15%)
		vertGradient(darken(blue, 15%), darken(blue, 30%))
		text-decoration none
.btn.large, input[type="submit"].large
	padding 20px
	font-size 1.5em

.btn.danger, input[type="submit"].danger
	vertGradient(#da4f49, #bd362f)

.btn.inactive, input[type="submit"][disabled]
	background #ccc

#newPoll
	font-size 1em
	text-align center

#headerNew
	border-radius 5px
	padding 5px

#poll-list
	padding 0

.poll-item
	padding 10px 0
	border-bottom 1px solid #ccc
	list-style-type none

	h3
		margin-bottom 0

#voteCode
	font-size 1.5em
	font-weight bold

#pollTitle input
	margin-bottom 30px

#choices input
	font-size 1em
	padding 5px
	margin-bottom 10px

#addChoice
	display inline-block
	
	vertGradient(#999, #666)
	color white
	
	border-radius 3px
	padding 5px
	margin-bottom 20px

.emailOptional p
	margin-bottom 5px

#errors
	color #fff
	vertGradient(#da4f49, #bd362f)

	border-radius 5px
	padding 10px
	padding-left 30px

input.error
