border-radius(n)
	-webkit-border-radius n
	   -moz-border-radius n
	        border-radius n

box-shadow(n)
	-webkit-box-shadow 0 1px n rgba(0,0,0,.2)

box-sizing(s)
	-webkit-box-sizing s
	   -moz-box-sizing s
	        box-sizing s

blue = #08c


body
	font 100%/1.5 "Helvetica Neue", Arial, Helvetica, sans-serif
	background darken(white, 10%)

a
	color: #000;
	text-decoration none

	&:hover
		text-decoration underline

#container
	width 600px
	margin 1em auto

header
	margin-bottom 1em
	
	h1
		float left

h1, h2, h3
	margin 0

h2, h3
	margin-bottom .5em

nav
	float right

nav a
	display inline
	margin-left 20px

#content
	background white
	border 1px solid #ccc
	padding 20px

	border-radius 5px
	box-shadow 5px
	clear both

#chart
	width 100%
	height 400px
	margin-top 20px

.clear
	clear both

.btn, input[type="submit"]
	-webkit-appearance none

	display inline-block
	padding 20px
	border-radius 10px

	font-size 1.5em
	background blue
	color white
	
	&:hover
		cursor pointer
		background darken(blue, 15%)
input
	display block
	padding 10px
	margin-bottom 20px
	width 100%

	box-sizing border-box

input[type="text"], input[type="email"], input[type="password"]
	font-size 1.5em

input[type="submit"]
	border 0

#poll-list
	padding 0

.poll-item
	padding 10px 0
	border-bottom 1px solid #ccc
	list-style-type none

#voteCode
	font-size 1.5em
	font-weight bold
